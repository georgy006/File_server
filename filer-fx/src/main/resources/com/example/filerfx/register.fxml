<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filerfx.controllers.RegistrationController">
   <children>
      <Label layoutX="41.0" layoutY="10.0" text="Регистрация">
         <font>
            <Font name="Comic Sans MS Bold" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="41.0" layoutY="90.0" promptText="Имя пользователя">
         <font>
            <Font name="Comic Sans MS" size="16.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordField" layoutX="40.0" layoutY="133.0" promptText="Пароль">
         <font>
            <Font name="Comic Sans MS" size="16.0" />
         </font>
      </PasswordField>
      <Label fx:id="statusLabel" layoutX="41.0" layoutY="167.0" prefHeight="28.0" prefWidth="218.0" text="Вопрос">
         <font>
            <Font name="Comic Sans MS" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="statusField" layoutX="40.0" layoutY="196.0" promptText="Ответ">
         <font>
            <Font name="Comic Sans MS" size="16.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER" layoutX="14.0" layoutY="252.0" prefHeight="34.0" prefWidth="281.0" spacing="10.0">
         <children>
            <Button onAction="#goBackToLogin" text="Назад">
               <font>
                  <Font name="Comic Sans MS" size="16.0" />
               </font>
            </Button>
            <Button onAction="#handleRegister" text="Зарегистрироваться">
               <font>
                  <Font name="Comic Sans MS" size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
